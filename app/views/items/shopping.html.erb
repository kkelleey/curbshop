

<h3>Select a Category</h3>

<form method="get">
<select class="form-control" name="category_id" onchange="this.form.submit()">
  <option value=''>Select...</option>
  <% @categories.each do |category| %>
  	 <option value="<%=category.id %>"><%=category.name %></option>
   <% end %>
</select>
</form>

<% count = 0 %>
<% @items.each do |item| %>
	<% if count%4 ==0
		puts '<div class="row">'
	 end %>
	<div class="span3">
		<p><%= image_tag item.item_images[0].image(:medium) %><br>
		<%= item.description %><br>
		<%= item.city %><br>
		
		Price: <%=item.current_price %><br>
		<%= form_for @bid do |f| %>
			<%=f.text_field :bid %>
			<input type='hidden' id='bid_user_id' name='bid[user_id]' value="<%= current_user.id %>">
			<input type='hidden' id='bid_item_id' name='bid[item_id]' value="<%= item.id %>">
			<%= f.submit %>
		<% end %>
	</p></div>
	<% if count%4==3
		puts '</div>'
	 end %>  <!-- end row -->
<% end %>
