
<% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<ul class="nav nav-pills">
  <li class="<%= 'active' if params[:category_id].blank? %>">
    <%= link_to "All", shopping_path %>
  </li>
  <% @categories.each do |category| %>
  	<li class="<%= 'active' if params[:category_id] == category.id.to_s %>"> <%=link_to "#{category.name}", :category_id => category.id %></li>
  <% end %>
</ul>

<div id="wrapper">
	<div id="columns">
    <% @items.each do |item| %>
  	  <div class="pin">
  		  <div class="span3">
          <%= link_to image_tag(item.imageDisplay), item %>
    		  <p>
    		    <%= item.description %><br>
    		    <%= item.city %><br>
    		    $<%=item.current_price %><br>
    		    
    	    </p>
        </div>
      </div>
    <% end %>
  </div>
</div>



