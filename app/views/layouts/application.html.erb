<!DOCTYPE html>
<html>
<head>
  <title>Curbshop</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= nav_bar :fixed => :top, :brand => "CurbShop", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item "Buy", shopping_path %>
        <%= menu_item "Sell", new_item_path %>
        <%= menu_item "My Curb", curb_path %>
        <%= menu_item "About", about_path %>
        <%= menu_divider %>
    <% end %>
    <%= menu_group :pull => :right do %>
        <% if user_signed_in? %>
            <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
        <% else %>
            <%= menu_item "Sign In", new_user_session_path %>
            <%= menu_item "Sign Up", new_user_registration_path %>
        <% end %>
    <% end %>
<% end %>

<div class = 'container'>
	<%= yield %>
</div>

</body>
</html>
